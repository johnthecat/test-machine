{
  "name": "test-machine-build",
  "private": true,
  "version": "0.2.0",
  "license": "MIT",
  "homepage": "https://github.com/johnthecat/test-machine",
  "author": "Sergey Zhuravlev <zhuravlev1337@gmail.com> (https://github.com/johnthecat)",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnthecat/test-machine.git"
  },
  "bugs": {
    "url": "https://github.com/johnthecat/test-machine/issues"
  },
  "keywords": [
    "test",
    "unit",
    "plugin",
    "mocha",
    "jasmine"
  ],
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "node_modules/.bin/lerna bootstrap && node_modules/.bin/lerna exec --no-sort --concurrency 1 -- node ../../bin/link",
    "lint:src": "node_modules/.bin/lerna exec --no-sort --concurrency 3 -- ../../node_modules/.bin/tslint --config=\"../../tslint.json\" --project=\"../../tsconfig.json\" src/**/*.ts",
    "lint:test": "node_modules/.bin/lerna exec --no-sort --concurrency 3 -- ../../node_modules/.bin/tslint --config=\"../../tslint.json\" --project=\"../../tsconfig.json\" test/**/*.ts",
    "test": "node_modules/.bin/lerna exec -- ../../node_modules/.bin/mocha --opts ../../mocha.opts",
    "test:watch": "node_modules/.bin/lerna exec --no-sort -- ../../node_modules/.bin/mocha --opts ../mocha.opts --watch",
    "test:coverage": "node_modules/.bin/nyc npm run test",
    "test:publish": "node_modules/.bin/coveralls < coverage/lcov.info && rimraf coverage",
    "build": "lerna exec -- ../../node_modules/.bin/tsc",
    "build:watch": "npm run clean && npm run lint && lerna exec -- ../../node_modules/.bin/tsc --watch",
    "build:precommit": "npm run lint:src && npm run lint:test && npm run test && npm run build",
    "build:ci": "npm run lint:src && npm run lint:test && npm run test:coverage && npm run build"
  },
  "pre-commit": [
    "build:precommit"
  ],
  "nyc": {
    "all": true,
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 70,
    "sourceMap": true,
    "include": [
      "packages/*/src/*.ts",
      "packages/*/src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "devDependencies": {
    "@types/chai": "3.5.1",
    "@types/core-js": "0.9.41",
    "@types/mocha": "2.2.41",
    "@types/node": "7.0.13",
    "@types/webpack": "2.2.15",
    "babel-core": "6.24.1",
    "babel-loader": "7.0.0",
    "babel-preset-es2015": "6.24.1",
    "chai": "3.5.0",
    "coveralls": "^2.13.0",
    "fs-extra": "2.1.2",
    "jasmine": "2.5.3",
    "lerna": "2.0.0-rc.1",
    "mocha": "3.2.0",
    "nyc": "10.2.0",
    "pre-commit": "1.2.2",
    "ts-node": "3.0.2",
    "tslint": "5.1.0",
    "typescript": "2.2.2",
    "webpack": "2.4.1",
    "webpack-merge": "^4.1.0"
  }
}
