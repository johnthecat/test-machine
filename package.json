{
  "name": "test-machine",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/johnthecat/test-machine",
  "author": "Sergey Zhuravlev <zhuravlev1337@gmail.com> (https://github.com/johnthecat)",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnthecat/test-machine.git"
  },
  "bugs": {
    "url": "https://github.com/johnthecat/test-machine/issues"
  },
  "keywords": [
    "test",
    "unit",
    "plugin",
    "mocha",
    "jasmine",
    "webpack"
  ],
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "lerna bootstrap && lerna exec --no-sort --parallel -- node \"../../bin/link\"",
    "lint:src": "lerna exec --no-sort --concurrency 3 --parallel -- tslint -c \"../../tslint.json\" \"./src/**/*\"",
    "lint:test": "lerna exec --no-sort --concurrency 3 --parallel -- tslint -c \"../../tslint.json\" \"./test/**/*\"",
    "test": "lerna exec --parallel -- mocha --opts \"../../mocha.opts\"",
    "test:watch": "lerna exec --no-sort -- mocha --opts \"../mocha.opts\" --watch",
    "test:coverage": "nyc npm run test",
    "test:publish": "coveralls < ./coverage/lcov.info && rimraf ./coverage -G",
    "cleanup": "lerna exec --parallel -- rimraf ./dist -G",
    "build": "lerna exec --parallel -- tsc",
    "build:watch": "npm run clean && npm run lint && lerna exec -- tsc --watch",
    "build:precommit": "npm run lint:src && npm run lint:test && npm run build && npm run test",
    "build:ci": "npm run lint:src && npm run lint:test && npm run cleanup && npm run build && npm run test:coverage"
  },
  "precommit": [
    "build:precommit"
  ],
  "nyc": {
    "all": true,
    "check-coverage": true,
    "lines": 75,
    "statements": 75,
    "functions": 75,
    "branches": 70,
    "sourceMap": true,
    "include": [
      "packages/*/src/*.ts",
      "packages/*/src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "devDependencies": {
    "@types/chai": "4.0.1",
    "@types/mocha": "2.2.41",
    "@types/node": "8.0.4",
    "@types/webpack": "3.0.0",
    "babel-core": "6.25.0",
    "babel-loader": "7.1.1",
    "babel-preset-es2015": "6.24.1",
    "chai": "4.0.2",
    "coveralls": "2.13.1",
    "css-loader": "0.28.4",
    "extract-text-webpack-plugin": "2.1.2",
    "fs-extra": "3.0.1",
    "jasmine": "2.6.0",
    "lerna": "2.0.0-rc.4",
    "mocha": "3.4.2",
    "nyc": "11.0.3",
    "pre-commit": "1.2.2",
    "rimraf": "2.6.1",
    "ts-node": "3.1.0",
    "tslint": "5.4.3",
    "typescript": "2.4.1",
    "webpack": "3.0.0",
    "webpack-merge": "4.1.0"
  }
}
