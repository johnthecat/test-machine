{
  "version": "2.3.1",
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "allowJs": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": false,
    "lib": [
      "es6",
      "es7"
    ],
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "removeComments": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
